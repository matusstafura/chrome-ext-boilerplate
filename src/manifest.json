{
  "name": "__MSG_extName__",
  "description": "Chrome Extension Boilerplate with Vue.js and Tailwind CSS",
  "version": "0.1.0",
  "manifest_version": 2,
  "default_locale": "en",
  "permissions": ["activeTab", "<all_urls>", "*://*/*"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
